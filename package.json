{
  "name": "cloudflare-worker-mcp-scaffold",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run migrate:remote && wrangler deploy",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate:local": "wrangler d1 migrations apply --local",
    "migrate:remote": "wrangler d1 migrations apply --remote",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/assets/css/style.css"
  },
  "dependencies": {
    "@cloudflare/actors": "^0.0.1-beta.6",
    "@cloudflare/sandbox": "^0.4.3",
    "@hono/zod-openapi": "^0.9.9",
    "@octokit/rest": "^20.1.1",
    "ai": "^3.2.14",
    "cloudflare": "^5.2.0",
    "hono": "^4.4.3",
    "workers-ai-provider": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "@types/node": "^24.8.1",
    "flowbite": "^3.1.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "wrangler": "^4.43.0"
  }
}
