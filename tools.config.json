{
  "comment": "This file defines the external MCP tools available to the AI Research Assistant.",
  "tools": {
    "cloudflare_docs": { "type": "mcp", "description": "Queries official Cloudflare documentation.", "endpoint": "https://docs.mcp.cloudflare.com/mcp" },
