    "observability_service": { "type": "mcp", "description": "Accesses worker logs and analytics.", "endpoint": "https://observability.mcp.cloudflare.com/mcp" },
    "containers_service": { "type": "mcp", "description": "Manages Cloudflare containers.", "endpoint": "https://containers.mcp.cloudflare.com/mcp" },
    "context7": { "type": "mcp", "description": "A third-party knowledge source.", "command": "npx", "args": ["-y", "@upstash/context7-mcp"], "env_vars": ["CONTEXT7_API_KEY"] }
